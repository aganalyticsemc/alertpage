<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
             xmlns:b.gwt="urn:import:org.gwtbootstrap3.client.ui.gwt"
	         xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="styleTmpPage.css"/>		
	<b:Container fluid="true" addStyleNames="{style.containerPageOne}">
		<b:Row>
			<b:Column size = "LG_12,MD_12" >
<!-- 				UPPER PANEL -->
				<b:Panel>
					<b:PanelHeader>
						<b:Heading size="H3" text="Header Panel 1"/>
					</b:PanelHeader>
					<b:PanelBody>
						<b:Column size = "LG_3,MD_3" >
							<b:InputGroup size="LARGE">
							  <b:InputGroupAddon text="Title input group 1"/>
							  <b:InputGroupAddon addStyleNames="{style.input}" text="Content input group 1 "/>
							</b:InputGroup>			
						</b:Column>		
						<b:Column size = "LG_3,MD_3" >
							<b:InputGroup size="LARGE">
							  <b:InputGroupAddon text="Title input group 2"/>
							  <b:InputGroupAddon addStyleNames="{style.input}" text="Content input group 2 "/>
							</b:InputGroup>			
						</b:Column>	
						<b:Column size = "LG_3,MD_3" >
							<b:InputGroup size="LARGE">
							  <b:InputGroupAddon text="Title input group 3"/>
							  <b:InputGroupAddon addStyleNames="{style.input}" text="Content input group 3 "/>
							</b:InputGroup>			
						</b:Column>	
						<b:Column size = "LG_3,MD_3" >
							<b:InputGroup size="LARGE">
							  <b:InputGroupAddon text="Title input group 4"/>
							  <b:InputGroupAddon addStyleNames="{style.input}" text="Content input group 4 "/>
							</b:InputGroup>			
						</b:Column>														
					</b:PanelBody>
				</b:Panel>		
				
<!-- 				LOWER PANEL -->
				<b:Panel>
					<b:PanelHeader>
						<b:Heading size="H3" text="Header Panel 2"/>
					</b:PanelHeader>
					<b:PanelBody>
						<b:NavTabs>
							<b:ListDropDown>
								<b:AnchorButton active="true" dataToggle="DROPDOWN" text="Drop down 1"/>
									<b:DropDownMenu>
										<b:AnchorListItem>Item 1</b:AnchorListItem>
										<b:AnchorListItem>Item 2</b:AnchorListItem>
										<b:AnchorListItem>Item 3</b:AnchorListItem>
									</b:DropDownMenu>								
							</b:ListDropDown>
							<b:ListDropDown>
								<b:AnchorButton dataToggle="DROPDOWN" text="Drop down 2"/>
									<b:DropDownMenu>
										<b:AnchorListItem>Item 1</b:AnchorListItem>
										<b:AnchorListItem>Item 2</b:AnchorListItem>
										<b:AnchorListItem>Item 3</b:AnchorListItem>
									</b:DropDownMenu>								
							</b:ListDropDown>
							<b:AnchorListItem icon="FILE_EXCEL_O" pull="RIGHT"></b:AnchorListItem>
							<b:AnchorListItem icon="PRINT" pull="RIGHT"></b:AnchorListItem>
							<b:AnchorListItem icon="FILE_PDF_O" pull="RIGHT"></b:AnchorListItem>
						    <b:NavbarForm pull="RIGHT">
						      <b:TextBox placeholder="Search in field 1..."/>
						    </b:NavbarForm>
						    						    			
						</b:NavTabs>					
                    <b.gwt:DataGrid bordered="true" condensed="true" striped="true" hover="true" height="300px"
                                    width="100%" ui:field="dataGrid"/>
                    <b:Pagination ui:field="dataGridPagination"/>					
					</b:PanelBody>
				</b:Panel>
						
			</b:Column>
		</b:Row>
	</b:Container>				


</ui:UiBinder> 